%section.advanced_search.container
  %form
  = form_tag advanced_search_videos_path, class: 'form-horizontal' do
    %header
      %h1 Advanced Search
    .form-group
      .col-sm-6
        = search_field_tag :query, params[:query], placeholder: "Search videos by title or description", class: "form-control"
    .form-group
      .col-sm-6
        = button_tag(type: "submit", class: "btn btn-primary") do
          %span.glyphicon.glyphicon-search
          Search
  %hr
  - if params[:query].present?
    %h2.results_count Results: #{@videos.count} videos found
    - @videos.each do |video|
      %article.video.row
        .video_data
          %figure.col-sm-2
            = link_to video, nil do
              = image_tag video.small_cover_url
          .video_body.col-sm-10
            %header
              %h3= video.title
            %p.video_description= video.description
