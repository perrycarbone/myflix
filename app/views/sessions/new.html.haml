%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag layout: :horizontal, url: login_path, class: 'sign_in', label_col: 'col-sm-2', control_col: 'col-sm-5' do |f|
        %header
          %h1 Sign In
        = f.email_field :email_address, label: "Email Address"
        = f.password_field :password
        = f.form_group do
          = f.submit "Sign In"
